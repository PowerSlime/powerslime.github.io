mixin add_language(language, rating, data_translate_id)
	.col-xl-3.col-lg-4.col-md-4.col-sm-4.col-4
		.language
			.lang(data-translate-id=data_translate_id)
			.lang-progress= rating

mixin add_skill(language, rating)
	//- rating is an array, ex. [3, 5]
	//- for 3/5 rating

	tr
		td.skill= language
		td.rating-row
			ul.rating-list
				- for (var active = 1; active <= rating[0]; active++)
					li.rating.active

				- rest = rating[1] - rating[0]
				- for (var blocks = 1; blocks <= rest; blocks++)
					li.rating


mixin add_interest(source, description, data_translate_id)
	li.item
		.item-container(class=attributes.custom_class)
			.image-container

				if !attributes.custom_class
					img.image(src=source, alt=description)
				else
					img.image(src=source, alt=description, style="opacity: 0")
			p.title(data-custom-text=attributes.custom_text, data-translate-id=data_translate_id)


mixin add_project(title, url, image, data_translate_id)
	.project-container
		.image-container
			a(href=url, target='_blank')
				img.img-fluid(src=image)
		p.title(data-translate-id=data_translate_id)
